<div class="row mb-3">
  <div class="col">
    <h2>Mata Kuliah (MK)</h2>
  </div>
  <div class="col text-end">
    <a href="/mk/form" class="btn btn-primary">Add New Mata Kuliah</a>
  </div>
</div>

<table class="table table-bordered table-striped">
  <thead class="table-dark">
    <tr>
      <th>No</th>
      <th>Kode MK</th>
      <th>Nama Mata Kuliah</th>
      <th>Kompetensi</th>
      <th>SKS</th>
      <th>Semester</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% if (mataKuliah && mataKuliah.length > 0) { %> <% mataKuliah.forEach((mk,
    index) => { %>
    <tr>
      <td><%= index + 1 %></td>
      <td><%= mk.kode_mk %></td>
      <td><%= mk.nama_mk %></td>
      <td>
        <% if (mk.kompetensi === 'Utama') { %>
        <span class="badge bg-primary"><%= mk.kompetensi %></span>
        <% } else { %>
        <span class="badge bg-secondary"><%= mk.kompetensi %></span>
        <% } %>
      </td>
      <td><%= mk.sks %></td>
      <td class="text-center"><%= mk.semester_roman %></td>
      <td>
        <a href="/mk/edit/<%= mk.id %>" class="btn btn-sm btn-warning me-2"
          >Edit</a
        >
        <a
          href="/mk/delete/<%= mk.id %>"
          class="btn btn-sm btn-danger"
          onclick="return confirm('Are you sure you want to delete this Mata Kuliah?')"
          >Delete</a
        >
      </td>
    </tr>
    <% }) %> <% } else { %>
    <tr>
      <td colspan="7" class="text-center">No Mata Kuliah available</td>
    </tr>
    <% } %>
  </tbody>
</table>

<%- contentFor('title') %> Mata Kuliah
