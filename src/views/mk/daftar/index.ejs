<div class="row mb-3">
  <div class="col">
    <h2>Mata Kuliah (MK)</h2>
  </div>
  <div class="col text-end">
    <a href="/mk/daftar/form" class="btn btn-primary me-2"
      >Add New Mata Kuliah</a
    >
    <a href="/mk/daftar/visualization" class="btn btn-info text-white"
      >Visualisasi MK</a
    >
  </div>
</div>

<table class="table table-bordered table-striped">
  <thead class="table-dark">
    <tr>
      <th>No</th>
      <th>Kode MK</th>
      <th>Nama Mata Kuliah</th>
      <th>Kompetensi</th>
      <th>Jenis MK</th>
      <th>SKS</th>
      <th>Semester</th>
      <th>Prasyarat</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% if (mataKuliah && mataKuliah.length > 0) { %> <% mataKuliah.forEach((mk,
    index) => { %>
    <tr>
      <td><%= index + 1 %></td>
      <td><%= mk.kode_mk %></td>
      <td><%= mk.nama_mk %></td>
      <td>
        <% if (mk.kompetensi === 'Utama') { %>
        <span class="badge bg-primary"><%= mk.kompetensi %></span>
        <% } else { %>
        <span class="badge bg-secondary"><%= mk.kompetensi %></span>
        <% } %>
      </td>
      <td>
        <% if (mk.jenis_mk === 'MK Wajib') { %>
        <span class="badge bg-success"><%= mk.jenis_mk %></span>
        <% } else if (mk.jenis_mk === 'MK Pilihan') { %>
        <span class="badge bg-info text-dark"><%= mk.jenis_mk %></span>
        <% } else if (mk.jenis_mk === 'MKWK') { %>
        <span class="badge bg-warning text-dark"><%= mk.jenis_mk %></span>
        <% } else { %>
        <span class="badge bg-secondary">-</span>
        <% } %>
      </td>
      <td><%= mk.sks %></td>
      <td class="text-center"><%= mk.semester_roman %></td>
      <td><%= mk.prasyarat || '-' %></td>
      <td>
        <a
          href="/mk/daftar/edit/<%= mk.id %>"
          class="btn btn-sm btn-warning me-2"
          >Edit</a
        >
        <a
          href="/mk/daftar/delete/<%= mk.id %>"
          class="btn btn-sm btn-danger"
          onclick="return confirm('Are you sure you want to delete this Mata Kuliah?')"
          >Delete</a
        >
      </td>
    </tr>
    <% }) %> <% } else { %>
    <tr>
      <td colspan="9" class="text-center">No Mata Kuliah available</td>
    </tr>
    <% } %>
  </tbody>
</table>

<%- contentFor('title') %> Mata Kuliah
