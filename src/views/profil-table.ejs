<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Profil Lulusan Table</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="container mt-5">
      <div class="row mb-3">
        <div class="col">
          <h2>Profil Lulusan (PL)</h2>
        </div>
        <div class="col text-end">
          <a href="/profil-lulusan/form" class="btn btn-primary"
            >Add New Profile</a
          >
        </div>
      </div>

      <table class="table table-bordered table-striped">
        <thead class="table-dark">
          <tr>
            <th>No</th>
            <th>Kode PL</th>
            <th>Profil Lulusan (PL)</th>
            <th>Referensi</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if (profiles && profiles.length > 0) { %> <%
          profiles.forEach((profile, index) => { %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= profile.kode_pl %></td>
            <td><%= profile.deskripsi %></td>
            <td><%- profile.referensi.replace(/\n/g, '<br />') %></td>
            <td>
              <a
                href="/profil-lulusan/delete/<%= profile.id %>"
                class="btn btn-sm btn-danger"
                onclick="return confirm('Are you sure you want to delete this profile?')"
                >Delete</a
              >
            </td>
          </tr>
          <% }) %> <% } else { %>
          <tr>
            <td colspan="5" class="text-center">No profiles available</td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
