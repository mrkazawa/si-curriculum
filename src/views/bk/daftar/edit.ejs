<div class="row">
  <div class="col-md-8 offset-md-2">
    <div class="card">
      <div class="card-header bg-warning text-dark">
        <h3>Edit Bahan Kajian (BK)</h3>
      </div>
      <div class="card-body">
        <% if (typeof error !== 'undefined') { %>
        <div class="alert alert-danger"><%= error %></div>
        <% } %>
        <form action="/bk/daftar/update/<%= bk.id %>" method="POST">
          <div class="mb-3">
            <label for="kode_bk" class="form-label">Kode BK</label>
            <input
              type="text"
              class="form-control"
              id="kode_bk"
              name="kode_bk"
              required
              value="<%= bk.kode_bk %>"
            />
          </div>

          <div class="mb-3">
            <label for="bahan_kajian" class="form-label">Bahan Kajian</label>
            <input
              type="text"
              class="form-control"
              id="bahan_kajian"
              name="bahan_kajian"
              required
              value="<%= bk.bahan_kajian %>"
            />
          </div>

          <div class="mb-3">
            <label for="deskripsi" class="form-label">Deskripsi</label>
            <textarea
              class="form-control"
              id="deskripsi"
              name="deskripsi"
              rows="4"
              required
            ><%= bk.deskripsi %></textarea>
          </div>

          <div class="mb-3">
            <label for="kompetensi" class="form-label">Kompetensi</label>
            <select class="form-select" id="kompetensi" name="kompetensi" required>
              <option value="Utama" <%= bk.kompetensi === 'Utama' ? 'selected' : '' %>>Utama</option>
              <option value="Umum" <%= bk.kompetensi === 'Umum' ? 'selected' : '' %>>Umum</option>
              <option value="Pendukung" <%= bk.kompetensi === 'Pendukung' ? 'selected' : '' %>>Pendukung</option>
            </select>
          </div>

          <div class="mb-3">
            <label for="referensi" class="form-label">Referensi</label>
            <textarea
              class="form-control"
              id="referensi"
              name="referensi"
              rows="3"
            ><%= bk.referensi %></textarea>
          </div>

          <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-warning">Update</button>
            <a href="/bk/daftar" class="btn btn-secondary">Cancel</a>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<%- contentFor('title') %> Edit Bahan Kajian