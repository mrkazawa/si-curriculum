<div class="row">
  <div class="col-md-8 offset-md-2">
    <div class="card">
      <div class="card-header bg-warning text-dark">
        <h3>Edit Profil Lulusan (PL)</h3>
      </div>
      <div class="card-body">
        <% if (typeof error !== 'undefined') { %>
        <div class="alert alert-danger"><%= error %></div>
        <% } %>
        <form action="/profil-lulusan/update/<%= profile.id %>" method="POST">
          <div class="mb-3">
            <label for="kode_pl" class="form-label">Kode PL</label>
            <input
              type="text"
              class="form-control"
              id="kode_pl"
              name="kode_pl"
              required
              value="<%= profile.kode_pl %>"
            />
          </div>

          <div class="mb-3">
            <label for="deskripsi" class="form-label"
              >Deskripsi Profil Lulusan</label
            >
            <textarea
              class="form-control"
              id="deskripsi"
              name="deskripsi"
              rows="4"
              required
            >
<%= profile.deskripsi %></textarea
            >
          </div>

          <div class="mb-3">
            <label for="referensi" class="form-label">Referensi</label>
            <textarea
              class="form-control"
              id="referensi"
              name="referensi"
              rows="3"
            >
<%= profile.referensi %></textarea
            >
          </div>

          <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-warning">Update</button>
            <a href="/profil-lulusan" class="btn btn-secondary">Cancel</a>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<%- contentFor('title') %> Edit Profil Lulusan
