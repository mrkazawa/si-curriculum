<div class="row mb-3">
  <div class="col">
    <h2>Capaian Pembelajaran Mata Kuliah (CPMK)</h2>
  </div>
  <div class="col text-end">
    <a href="/cpmk/daftar/form" class="btn btn-primary">Add New CPMK</a>
  </div>
</div>

<table class="table table-bordered table-striped">
  <thead class="table-dark">
    <tr>
      <th>No</th>
      <th>Kode CPMK</th>
      <th>Deskripsi</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% if (cpmks && cpmks.length > 0) { %> <% cpmks.forEach((cpmk, index) => {
    %>
    <tr>
      <td><%= index + 1 %></td>
      <td><%= cpmk.kode_cpmk %></td>
      <td><%= cpmk.deskripsi %></td>
      <td>
        <a
          href="/cpmk/daftar/edit/<%= cpmk.id %>"
          class="btn btn-sm btn-warning me-2"
          >Edit</a
        >
        <a
          href="/cpmk/daftar/delete/<%= cpmk.id %>"
          class="btn btn-sm btn-danger"
          onclick="return confirm('Are you sure you want to delete this CPMK?')"
          >Delete</a
        >
      </td>
    </tr>
    <% }) %> <% } else { %>
    <tr>
      <td colspan="4" class="text-center">No CPMKs available</td>
    </tr>
    <% } %>
  </tbody>
</table>

<%- contentFor('title') %> CPMK
