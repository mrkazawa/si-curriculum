<div class="row mb-3">
  <div class="col">
    <h2>Profil Lulusan (PL)</h2>
  </div>
  <div class="col text-end">
    <a href="/pl/form" class="btn btn-primary">Add New Profile</a>
  </div>
</div>

<table class="table table-bordered table-striped">
  <thead class="table-dark">
    <tr>
      <th>No</th>
      <th>Kode PL</th>
      <th>Profil Lulusan (PL)</th>
      <th>Referensi</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% if (profiles && profiles.length > 0) { %> <% profiles.forEach((profile,
    index) => { %>
    <tr>
      <td><%= index + 1 %></td>
      <td><%= profile.kode_pl %></td>
      <td><%= profile.deskripsi %></td>
      <td><%- profile.referensi.replace(/\n/g, '<br />') %></td>
      <td>
        <a href="/pl/edit/<%= profile.id %>" class="btn btn-sm btn-warning me-2"
          >Edit</a
        >
        <a
          href="/pl/delete/<%= profile.id %>"
          class="btn btn-sm btn-danger"
          onclick="return confirm('Are you sure you want to delete this profile?')"
          >Delete</a
        >
      </td>
    </tr>
    <% }) %> <% } else { %>
    <tr>
      <td colspan="5" class="text-center">No profiles available</td>
    </tr>
    <% } %>
  </tbody>
</table>
